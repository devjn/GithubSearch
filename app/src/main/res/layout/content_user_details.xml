<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <import type="android.text.TextUtils"/>

        <variable
            name="user"
            type="com.github.devjn.githubsearch.utils.User"/>
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.github.devjn.githubsearch.UserDetailsActivity"
        tools:showIn="@layout/activity_user_details">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_medium">

            <android.support.v7.widget.CardView
                android:id="@+id/info_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_small"
                android:layout_marginTop="@dimen/spacing_small"
                app:cardCornerRadius="2dp">

                <TextView
                    android:padding="@dimen/spacing_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_info"
                    android:textColor="@color/colorAccent"/>

                <LinearLayout
                    android:layout_marginTop="@dimen/spacing_large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/empty_small_divider"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_small"
                    android:showDividers="middle"
                    android:visibility="@{user.isDetailed ? View.VISIBLE:View.GONE}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{user.name}"
                        android:visibility="@{user.name != null ? View.VISIBLE:View.GONE}"
                        tools:text="name"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{user.bio}"
                        android:visibility="@{user.bio != null ? View.VISIBLE:View.GONE}"
                        tools:text="bio"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{user.company}"
                        android:visibility="@{user.company != null ? View.VISIBLE:View.GONE}"
                        tools:text="company"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_location_16dp"
                        android:text="@{user.location}"
                        android:visibility="@{user.location != null ? View.VISIBLE:View.GONE}"
                        tools:text="location"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="2dp"
                        android:drawableStart="@drawable/ic_email_16dp"
                        android:text="@{user.email}"
                        android:visibility="@{user.email != null ? View.VISIBLE:View.GONE}"
                        tools:text="email"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="2dp"
                        android:drawableStart="@drawable/ic_link_16dp"
                        android:text="@{user.blog}"
                        android:visibility="@{!TextUtils.isEmpty(user.blog) ? View.VISIBLE:View.GONE}"
                        tools:text="blog"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/empty_info"
                        android:visibility="@{user.hasExtra ? View.GONE:View.VISIBLE}"
                        tools:text="no info"/>

                </LinearLayout>

                <android.support.v4.widget.ContentLoadingProgressBar
                    android:id="@+id/content_progress"
                    style="@style/Widget.AppCompat.ProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/spacing_xlarge"
                    android:visibility="@{user.isDetailed ? View.GONE:View.VISIBLE, default=visible}"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/pinned_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_small"
                android:layout_marginTop="@dimen/spacing_small"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_small">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_small"
                        android:text="@string/pinned_repos"
                        android:textColor="@color/colorAccent"/>

                    <com.github.devjn.githubsearch.views.StaticGridView
                        android:id="@+id/grid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:horizontalSpacing="@dimen/spacing_small"
                        android:numColumns="@integer/grid_columns"
                        android:verticalSpacing="@dimen/spacing_micro"/>

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/pinned_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/spacing_xlarge"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</layout>